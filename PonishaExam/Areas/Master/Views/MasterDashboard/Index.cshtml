@model Tuple<List<TestsViewModel>, MasterDashboardViewModel>
@{
    ViewData["Title"] = "پروفایل مدرس";
    Layout = "~/Areas/Master/Views/Shared/_MasterLayout.cshtml";
}
<div class="profile-page tx-13">
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="profile-header">
                <div class="cover">
                    <div class="gray-shade"></div>
                    <figure>
                        <img src="~/AdminPanel/assets/images/profile-cover.jpg" class="img-fluid" alt="profile cover">
                    </figure>
                    <div class="cover-body d-flex justify-content-between align-items-center">
                        <div>
                            <img class="profile-pic" src="~/image/@Model.Item2.Avatar" alt="profile">
                            <span class="profile-name">@Model.Item2.TeacherName</span>
                        </div>
                        <div>
                            <div class="d-none d-md-block mb-1">
                                <a asp-controller="MasterDashboard" asp-action="Edit" class="btn btn-warning btn-icon-text text-white btn-edit-profile">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit btn-icon-prepend"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg> ویرایش پروفایل
                                </a>
                            </div>
                            <div class="d-none d-md-block">
                                <a asp-area="" asp-controller="Home" asp-action="LogoutMaster" class="btn btn-danger btn-icon-text w-100 btn-edit-profile">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out ml-1"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg> خروج از حساب
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="header-links">
                    <ul class="links d-flex align-items-center mt-3 mt-md-0">
                        
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row my-2">
    <div class="col-12">
        <div class="grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h6 class="card-title">آزمون های در حال برگزاری (@Model.Item2.ActiveTestsCount آزمون)</h6>
                    </div>
                    <div class="table-responsive pt-3" style="max-height:500px">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        عنوان آزمون
                                    </th>
                                    <th class="text-center">
                                        کد آزمون
                                    </th>
                                    <th class="text-center">
                                        تعداد سوال
                                    </th>
                                    <th class="text-center">
                                        قیمت آزمون (تومان)
                                    </th>
                                    <th class="text-center">
                                        مدت زمان
                                    </th>
                                    <th class="text-center">
                                        شروع آزمون
                                    </th>
                                    <th class="text-center">
                                        اتمام آزمون
                                    </th>
                                    <th class="text-center">
                                        تاریخ آزمون
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Item1)
                                {
                                    <tr>
                                        <td class="text-center">@item.TestTitle</td>
                                        <td class="text-center">@item.TestCode</td>
                                        <td class="text-center">@item.QuestionCounts</td>
                                        <td class="text-center">@item.TestPrice</td>
                                        <td class="text-center">@item.TestDuration</td>
                                        <td class="text-center">@item.StartTime</td>
                                        <td class="text-center">@item.EndTime</td>
                                        <td class="text-center">@item.TestDayTime</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="d-none d-md-block col-md-4 col-xl-3 left-wrapper">
        <div class="card rounded">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="card-title mb-0">درباره من</h6>
                </div>
                <p>@Model.Item2.About</p>
                <div class="mt-3">
                    <label class="tx-11 font-weight-bold mb-0 text-uppercase">
                        پست الکترونیک :
                    </label>
                    <p class="text-muted">@Model.Item2.TeacherEmail</p>
                </div>
                <div class="mt-3">
                    <label class="tx-11 font-weight-bold mb-0 text-uppercase">
                        کدملی :
                    </label>
                    <p class="text-muted">@Model.Item2.NationalCode</p>
                </div>
                <div class="mt-3">
                    <label class="tx-11 font-weight-bold mb-0 text-uppercase">
                        شماره موبایل :
                    </label>
                    <p class="text-muted">@Model.Item2.PhoneNumber</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 grid-margin stretch-card position-relative" style="min-height:500px">
        <div class="card">
            <div class="card-body">
                <h5 class="pb-2">گزارش حضور در آزمون در حال برگذاری</h5>
                <div class="">
                    <div id="particChartContainer"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 grid-margin stretch-card position-relative" style="min-height:500px">
        <div class="card">
            <div class="card-body">
                <h5 class="pb-2">گزارش تکمیل آزمون در حال برگذاری</h5>
                <div class="">
                    <div id="finishedChartContainer"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" value="@Model.Item2.Participated" id="participated" />
<input type="hidden" value="@Model.Item2.NotParticipated" id="notParticipated" />
<input type="hidden" value="@Model.Item2.FinishedStudents" id="finishedStudents" />
<input type="hidden" value="@Model.Item2.UnFinishedStudents" id="unFinishedStudents" />
@section Scripts{
    <script src="/js/DashboardScripts.js" asp-append-version="true"></script>
    <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
    <script src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>
}
