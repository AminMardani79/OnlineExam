@model Tuple<List<ShowWorkBooksViewModel>, int, int>
@{
    ViewData["Title"] = "کارنامه ها";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">کارنامه ها</h6>
                <div class="row justify-content-between">
                    <form class="col-md-4 position-relative mb-3 mb-md-0" href="/Master/ShowWorkBooks" method="get">
                        <input name="search" class="form-control mr-auto" placeholder="عنوان آزمون ..." style="padding-left: 65px">
                        <button type="submit" class="btn btn-primary ml-2 position-absolute" style="left: 5px; top: 0; height: 100%; border-radius: 2px;">
                            ثبت
                        </button>
                    </form>
                    <div class="col-md-8 mb-3 mb-md-0 text-white">
                        <a class="btn btn-danger h-100" onclick="MasterSendAllWorkBooks()">
                            ارسال به دانش آموز
                        </a>
                    </div>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    عنوان آزمون
                                </th>
                                <th class="text-center">
                                    دانش آموز
                                </th>
                                <th class="text-center">
                                    تاریخ برگزاری
                                </th>
                                <th class="text-center">
                                    تعداد سوال
                                </th>
                                <th class="text-center">
                                    درست
                                </th>
                                <th class="text-center">
                                    غلط
                                </th>
                                <th class="text-center">
                                    بی پاسخ
                                </th>
                                <th class="text-center">
                                    درصد کل
                                </th>
                                <th class="text-center">
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item1)
                            {
                                <tr>
                                    <td class="text-center">
                                        @item.TestTitle
                                    </td>
                                    <td class="text-center">
                                        @item.StudentName
                                    </td>
                                    <td class="text-center">
                                        @item.TestDayTime
                                    </td>
                                    <td class="text-center">
                                        @item.QuestionCounts
                                    </td>
                                    <td class="text-center">
                                        @item.TrueAnswers
                                    </td>
                                    <td class="text-center">
                                        @item.WrongAnswers
                                    </td>
                                    <td class="text-center">
                                        @item.NoCheckedAnswers
                                    </td>
                                    <td class="text-center">
                                        @item.Score %
                                    </td>
                                    <td class="text-center">
                                        <div class="dropdown mb-2">
                                            <button class="btn p-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal icon-lg text-muted pb-3px"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item d-flex align-items-center" href="/Master/ShowSingleWorkBook/@item.StudentId/@item.TestId/@item.TestFile/@item.TestTitle"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 icon-sm ml-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg> <span class="">مشاهده کارنامه</span></a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Item2 > 1)
                    {
                        <div class="dataTables_paginate paging_simple_numbers py-3 d-flex justify-content-center" id="dataTableExample_paginate">
                            <ul class="pagination">
                                <li class="paginate_button page-item previous @((Model.Item3 - 1 == 0) ? "disabled" : "")" id="dataTableExample_previous">
                                    <a href="/Master/ShowWorkBooks?pageNumber=@(Model.Item3 - 1)&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="0" tabindex="0" class="page-link">قبلی</a>
                                </li>
                                @for (int i = 1; i <= (Model.Item2); i++)
                                {
                                    <li class="paginate_button page-item @(Model.Item3 == i ? "active" : "")">
                                        <a href="/Master/ShowWorkBooks?pageNumber=@i&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="1" tabindex="0" class="page-link">@i</a>
                                    </li>
                                }
                                <li class="paginate_button page-item @((Model.Item3 + 1 > Model.Item2) ? "disabled" : "")" id="dataTableExample_next">
                                    <a href="/Master/ShowWorkBooks?pageNumber=@(Model.Item3 + 1)&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="4" tabindex="0" class="page-link">بعدی</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>