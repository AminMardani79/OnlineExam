@model Tuple<List<StudentViewModel>, int, int>
@{
    ViewData["Title"] = "حذفیات دانش آموزان";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card mb-1">
        <div class="card py-3">
            <h5 class="px-3"> <i class="fa fa-search"></i> جستجو</h5>
            <hr />
            <form class="row px-3" asp-area="Master" asp-controller="Student" asp-action="DeleteList" method="get">
                <div class="col-md-4 mb-2 mb-md-0">
                    <input name="studentName" id="studentName" class="form-control searchTitle" placeholder="نام دانش آموز(اختیاری)">
                </div>
                <div class="col-md-4 mb-2 mb-md-0">
                    <select name="gradeId" id="gradeId" asp-items="ViewBag.Grades">
                        <option value="0">انتخاب پایه</option>
                    </select>
                </div>
                <div class="col-md-4 row  mb-2 mb-xl-0">
                    <div class="col-md-5 d-flex align-items-start">
                        <input type="submit" class="showBtn ml-1" value="اعمال فیلتر" />
                        <input type="button" class="removeFilter-btn" onclick="RemoveStudentFilters()" value="حذف فیلتر ها" />
                        <a href="/MasterPanel/Student/DeleteList" class="btn btn-success text-white mx-1" style="box-shadow: 0 0 2px green">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-refresh-ccw"><polyline points="1 4 1 10 7 10"></polyline><polyline points="23 20 23 14 17 14"></polyline><path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"></path></svg>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4 pb-2">
                <a class="d-inline-block mt-3 text-black" href="/MasterPanel/Student">
                    دانش آموزان
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body pt-0">
                <div class="row py-2 justify-content-between">
                    <h6 class="card-title style col-md-6 mb-1 mb-md-0">لیست حذفیات دانش آموزان</h6>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th class="text-center">
                                    دانش آموز
                                </th>
                                <th class="text-center">
                                    پایه
                                </th>
                                <th class="text-center">
                                    کد ملی
                                </th>
                                <th class="text-center">
                                    شماره تماس
                                </th>
                                <th class="text-center">
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item1)
                            {
                                <tr id="item_@item.StudentId">
                                    <td class="text-center">
                                        <img src="/image/@item.StudentImage" style="width:70px;height:70px" class="img-thumbnail rounded-circle" />
                                    </td>
                                    <td class="text-center">
                                        @item.StudentName
                                    </td>
                                    <td class="text-center">
                                        @item.GradeName
                                    </td>
                                    <td class="text-center">
                                        @item.StudentNationalCode
                                    </td>
                                    <td class="text-center">
                                        @item.StudentPhoneNumber
                                    </td>
                                    <td class="text-center">
                                        <div class="dropdown mb-2">
                                            <button class="btn p-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal icon-lg text-muted pb-3px"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                                <button class="dropdown-item d-flex align-items-center" onclick="RestoreStudent('@item.StudentId')"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 icon-sm ml-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg> <span class="">انصراف از حذف</span></button>
                                                <button onclick="DeleteMasterStudent('@item.StudentId')" class="dropdown-item d-flex align-items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash icon-sm ml-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg> <span class="">حذف نهایی</span></button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Item2 > 1)
                    {
                        <div class="dataTables_paginate paging_simple_numbers py-3 d-flex justify-content-center" id="dataTableExample_paginate">
                            <ul class="pagination">
                                <li class="paginate_button page-item previous @((Model.Item3-1 == 0) ? "disabled" : "")" id="dataTableExample_previous">
                                    <a href="/MasterPanel/Student/DeleteList?pageNumber=@(Model.Item3-1)&studentName=@ViewBag.StudentName&gradeId=@ViewBag.GradeId" aria-controls="dataTableExample" data-dt-idx="0" tabindex="0" class="page-link">قبلی</a>
                                </li>
                                @for (int i = 1; i <= (Model.Item2); i++)
                                {
                                    <li class="paginate_button page-item @(Model.Item3==i?"active":"")">
                                        <a href="/MasterPanel/Student/DeleteList?pageNumber=@i&studentName=@ViewBag.StudentName&gradeId=@ViewBag.GradeId" aria-controls="dataTableExample" data-dt-idx="1" tabindex="0" class="page-link">@i</a>
                                    </li>
                                }
                                <li class="paginate_button page-item @((Model.Item3+1 > Model.Item2) ? "disabled" : "")" id="dataTableExample_next">
                                    <a href="/MasterPanel/Student/DeleteList?pageNumber=@(Model.Item3+1)&studentName=@ViewBag.StudentName&gradeId=@ViewBag.GradeId" aria-controls="dataTableExample" data-dt-idx="4" tabindex="0" class="page-link">بعدی</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>