@model Tuple<List<OrdersBasketViewModel>, int, int>
@{
    ViewData["Title"] = "فاکتور ها";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">لیست فاکتور ها</h6>
                <div class="row justify-content-between">
                    <form class="col-md-4 position-relative" href="/Master/BoughtTests/@ViewBag.StudentId" method="get">
                        <input name="search" class="form-control mr-auto" placeholder="جستجو دانش آموز..." style="padding-left: 65px">
                        <button type="submit" class="btn btn-primary ml-2 position-absolute" style="left: 5px;
                                                                                                                         top: 0;
                                                                                                                         height: 100%;
                                                                                                                         border-radius: 2px;">
                            ثبت
                        </button>
                    </form>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th class="text-center">
                                    نام دانش آموز
                                </th>
                                <th class="text-center">
                                    کد سفارش
                                </th>
                                <th class="text-center">
                                    تاریخ ثبت
                                </th>
                                <th class="text-center">
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item1)
                            {
                                <tr id="item_@item.OrderId">
                                    @if (item.IsFinaly)
                                    {
                                        <td class="bg-success text-white text-center">پرداخت شده</td>
                                    }
                                    else
                                    {
                                        <td class="bg-danger text-white text-center">پرداخت نشده</td>
                                    }
                                    <td class="text-center">
                                        @item.StudentName
                                    </td>
                                    <td class="text-center">
                                        @item.OrderCode
                                    </td>
                                    <td class="text-center">
                                        @item.CreateDate
                                    </td>
                                    <td class="text-center">
                                        <a class="btn btn-primary text-white" onclick="$('.item_@item.OrderId').toggle()">جزئیات</a>
                                    </td>
                                </tr>
                                <tr style="display:none" class="item_@item.OrderId alert alert-success">
                                    <td class="text-center">عنوان آزمون</td>
                                    <td class="text-center">قیمت آزمون</td>
                                    <td class="text-center">شروع آزمون</td>
                                    <td class="text-center">اتمام آزمون</td>
                                    <td class="text-center">تاریخ آزمون</td>
                                </tr>
                                @foreach (var detail in item.Details)
                                {
                                    <tr style="display:none" class="item_@item.OrderId alert alert-info">
                                        <td class="text-center">@detail.TestTitle</td>
                                        <td class="text-center">@detail.TestPrice</td>
                                        <td class="text-center">@detail.StartTest</td>
                                        <td class="text-center">@detail.EndTest</td>
                                        <td class="text-center">@detail.TestDayTime</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @if (Model.Item2 > 1)
                    {
                        <div class="dataTables_paginate paging_simple_numbers py-3 d-flex justify-content-center" id="dataTableExample_paginate">
                            <ul class="pagination">
                                <li class="paginate_button page-item previous @((Model.Item3-1 == 0) ? "disabled" : "")" id="dataTableExample_previous">
                                    <a href="/Master/BoughtTests/@ViewBag.StudentId?pageNumber=@(Model.Item3-1)&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="0" tabindex="0" class="page-link">قبلی</a>
                                </li>
                                @for (int i = 1; i <= (Model.Item2); i++)
                                {
                                    <li class="paginate_button page-item @(Model.Item3==i?"active":"")">
                                        <a href="/Master/BoughtTests/@ViewBag.StudentId?pageNumber=@i&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="1" tabindex="0" class="page-link">@i</a>
                                    </li>
                                }
                                <li class="paginate_button page-item @((Model.Item3+1 > Model.Item2) ? "disabled" : "")" id="dataTableExample_next">
                                    <a href="/Master/BoughtTests/@ViewBag.StudentId?pageNumber=@(Model.Item3+1)&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="4" tabindex="0" class="page-link">بعدی</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/js/Orders.js" asp-append-version="true"></script>
    <script src="/js/Alert.js" asp-append-version="true"></script>
}