@model Tuple<List<ParticipantsViewModel>, int, int>
@{
    ViewData["Title"] = "شرکت کنندگان در آزمون";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end p-3">
                <a class="d-inline-block text-black" href="/Master/Exam">
                    آزمون ها
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body">
                <h6 class="card-title">شرکت کنندگان(@ViewBag.TestTitle)</h6>
                <div class="row justify-content-between">
                    <form class="col-md-4 position-relative mb-3 mb-md-0" href="/Master/Test/participants/@ViewBag.TestId/@ViewBag.TestTitle/@ViewBag.TestFile" method="get">
                        <input name="search" class="form-control mr-auto" placeholder="جستجو شرکت کننده..." style="padding-left: 65px">
                        <button type="submit" class="btn btn-primary ml-2 position-absolute" style="left: 5px; top: 0; height: 100%; border-radius: 2px;">
                            ثبت
                        </button>
                    </form>
                    <div class="col-md-4 mb-3 mb-md-0 text-white">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                            راهنما <svg xmlns="http://www.w3.org/2000/svg" width="24" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-circle"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>
                        </button>
                        <a class="btn btn-success" href="/Master/Test/RefreshParticipants/@ViewBag.TestId/@ViewBag.TestTitle/@ViewBag.TestFile">
                            بروزرسانی <svg xmlns="http://www.w3.org/2000/svg" width="24" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-refresh-ccw"><polyline points="1 4 1 10 7 10"></polyline><polyline points="23 20 23 14 17 14"></polyline><path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"></path></svg>
                        </a>
                        <a class="btn btn-danger h-100" onclick="MasterSendWorkBook(@ViewBag.TestId)">
                            ارسال به دانش آموز
                        </a>
                    </div>
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">
                                        راهنما <svg xmlns="http://www.w3.org/2000/svg" width="24" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-circle"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>
                                    </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    تراز ثبت شده در کارنامه به تعداد کارنامه های ثبت شده برای شرکت کنندگان در آزمون و همچنین درصد دروس آنها بستگی دارد بنابراین بعد از تصحیح تمامی پاسخ ها بر روی دکمه بروزرسانی کلیک کنید تا بتوانید تراز و رتبه نهایی هر دانش آموز را مشاهده کنید.
                                    <br />
                                    تراز در آزمون زمانی ثبت می شود که برای آزمون بیش از یک کارنامه ثبت شده باشد.
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        پاسخ ارسال شده <i class="fa fa-check text-success" style="font-size: 22px"></i>
                        پاسخ ارسال نشده <i class="fa fa-close text-danger" style="font-size: 22px"></i>
                    </div>
                </div>
                <div class="table-responsive pt-3" style="min-height:300px">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th class="d-none d-md-table-cell"></th>
                                <th class="text-center">
                                    دانش آموز
                                </th>
                                <th class="text-center">
                                    پایه
                                </th>
                                <th class="text-center">
                                    کد ملی
                                </th>
                                <th class="text-center">
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item1)
                            {
                                <tr id="item_@item.StudentId">
                                    <td class="text-center">
                                        @if (item.IsSubmitAnswer)
                                        {
                                            <i class="fa fa-check text-success" style="font-size: 22px"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-close text-danger" style="font-size: 22px"></i>
                                        }
                                    </td>
                                    <td class="text-center d-none d-md-table-cell">
                                        <img src="/image/@item.StudentImage" style="width: 60px; height: 60px" class="img-thumbnail rounded-circle" />
                                    </td>
                                    <td class="text-center">
                                        @item.StudentName
                                    </td>
                                    <td class="text-center">
                                        @item.Grade
                                    </td>
                                    <td class="text-center">
                                        @item.NationalCode
                                    </td>
                                    <td class="text-center">
                                        <div class="dropdown mb-2">
                                            <button class="btn p-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal icon-lg text-muted pb-3px"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                                @if (!item.IsSubmitWorkBook)
                                                {
                                                    <a class="dropdown-item d-flex align-items-center" href="/Master/Test/CorrectTest/@item.StudentId/@ViewBag.TestId/@ViewBag.TestTitle/@ViewBag.TestFile"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 icon-sm ml-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg> <span class="">تصحیح آزمون</span></a>
                                                }
                                                else
                                                {
                                                    <a class="dropdown-item d-flex align-items-center" href="/Master/Test/ShowWorkBook/@item.StudentId/@ViewBag.TestId/@ViewBag.TestTitle/@ViewBag.TestFile"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 icon-sm ml-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg> <span class="">مشاهده کارنامه</span></a>
                                                    <a class="dropdown-item d-flex align-items-center" href="/Master/Test/EditCorrectTest/@item.StudentId/@ViewBag.TestId/@ViewBag.TestTitle/@ViewBag.TestFile"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 icon-sm ml-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg> <span class="">ویرایش کارنامه</span></a>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Item2 > 1)
                    {
                        <div class="dataTables_paginate paging_simple_numbers py-3 d-flex justify-content-center" id="dataTableExample_paginate">
                            <ul class="pagination">
                                <li class="paginate_button page-item previous @((Model.Item3 - 1 == 0) ? "disabled" : "")" id="dataTableExample_previous">
                                    <a href="/Master/Test/participants/@ViewBag.TestId/@ViewBag.TestTitle/@ViewBag.TestFile?pageNumber=@(Model.Item3 - 1)&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="0" tabindex="0" class="page-link">قبلی</a>
                                </li>
                                @for (int i = 1; i <= (Model.Item2); i++)
                                {
                                    <li class="paginate_button page-item @(Model.Item3 == i ? "active" : "")">
                                        <a href="/Master/Test/participants/@ViewBag.TestId/@ViewBag.TestTitle/@ViewBag.TestFile?pageNumber=@i&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="1" tabindex="0" class="page-link">@i</a>
                                    </li>
                                }
                                <li class="paginate_button page-item @((Model.Item3 + 1 > Model.Item2) ? "disabled" : "")" id="dataTableExample_next">
                                    <a href="/Master/Test/participants/@ViewBag.TestId/@ViewBag.TestTitle/@ViewBag.TestFile?pageNumber=@(Model.Item3 + 1)&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="4" tabindex="0" class="page-link">بعدی</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="workBookSubmit" value="@ViewBag.SuccessAlert" />
@section Scripts{
    <script src="/js/alert.js" asp-append-version="true"></script>
}