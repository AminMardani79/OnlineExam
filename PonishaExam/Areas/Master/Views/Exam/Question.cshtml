@model Tuple<List<QuestionViewModel>, int, int>
@{
    ViewData["Title"] = "سوالات";
    Layout = "~/Areas/Master/Views/Shared/_MasterLayout.cshtml";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">
                <a class="d-inline-block mt-3 text-black" href="/Master/Exam">
                    آزمون ها
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body">
                <h6 class="card-title">لیست سوالات</h6>
                <div class="row justify-content-between">
                    <div class="col-md-6 mb-1 mb-md-0">
                        <a href="/Master/Exam/AddQuestion/@ViewBag.id/@ViewBag.GradeId/@ViewBag.LessonId" class="btn text-white btn-success">افزودن سوالات</a>
                    </div>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    شماره سوال
                                </th>
                                <th class="text-center">
                                    نوع سوال
                                </th>
                                <th class="text-center">
                                    نمره سوال
                                </th>
                                <th class="text-center">
                                    گزینه صحیح
                                </th>
                                <th class="text-center">
                                    گزینه ها
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item1)
                            {
                                <tr id="item_@item.Id">

                                    <td class="text-center">
                                        @item.QuestionNumber
                                    </td>
                                    <td class="text-center">
                                        @if (item.Type)
                                        {
                                            <span class="badge badge-success text-white">تشریحی</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning text-white">تستی</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @item.Score
                                    </td>
                                    <td class="text-center">
                                        @item.KeyAnswer
                                    </td>
                                    <td class="text-center">
                                        <div class="dropdown mb-2">
                                            <button class="btn p-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal icon-lg text-muted pb-3px"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item d-flex align-items-center" href="/Master/Exam/EditQuestion/@item.Id/@ViewBag.id/@ViewBag.GradeId/@ViewBag.LessonId"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 icon-sm ml-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg> <span class="">ویرایش</span></a>
                                                <button onclick="RemoveQuestion('@item.Id')" class="dropdown-item d-flex align-items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash icon-sm ml-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg> <span class="">حذف</span></button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Item2 > 1)
                    {
                        <div class="dataTables_paginate paging_simple_numbers py-3 d-flex justify-content-center" id="dataTableExample_paginate">
                            <ul class="pagination">
                                <li class="paginate_button page-item previous @((Model.Item3-1 == 0) ? "disabled" : "")" id="dataTableExample_previous">
                                    <a href="/Master/Exam/Question/@ViewBag.id/@ViewBag.GradeId/@ViewBag.LessonId?page=@(Model.Item3-1)" aria-controls="dataTableExample" data-dt-idx="0" tabindex="0" class="page-link">قبلی</a>
                                </li>
                                @for (int i = 1; i <= (Model.Item2); i++)
                                {
                                    <li class="paginate_button page-item @(Model.Item3==i?"active":"")">
                                        <a href="/Master/Exam/Question/@ViewBag.id/@ViewBag.GradeId/@ViewBag.LessonId?page=@i" aria-controls="dataTableExample" data-dt-idx="1" tabindex="0" class="page-link">@i</a>
                                    </li>
                                }
                                <li class="paginate_button page-item @((Model.Item3+1 > Model.Item2) ? "disabled" : "")" id="dataTableExample_next">
                                    <a href="/Master/Exam/Question/@ViewBag.id/@ViewBag.GradeId/@ViewBag.LessonId?page=@(Model.Item3+1)" aria-controls="dataTableExample" data-dt-idx="4" tabindex="0" class="page-link">بعدی</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/js/Alert.js" asp-append-version="true"></script>

}