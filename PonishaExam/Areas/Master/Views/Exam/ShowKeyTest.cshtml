@model List<KeyTestViewModel>
@{
    ViewData["Title"] = "کلید آزمون";
}
@section Css{
    <style>
        th {
            padding: 15px 5px !important;
        }

        input[type="radio"] {
            margin: 0 3px;
        }
    </style>
}
<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">
                <a class="d-inline-block mt-3 text-black" href="/Master/Exam">
                    آزمون ها
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body pt-0">
                <h6 class="card-title">کلید سوالات تستی آزمون</h6>
                <section class="py-3 row justify-content-around" style="direction: ltr">
                    <table class="table col-2 col-sm-1 mb-4 mb-sm-0" style="direction: ltr">
                        <thead>
                            <tr>
                                <th></th>
                                <th>1</th>
                                <th>2</th>
                                <th>3</th>
                                <th>4</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Take(20))
                            {
                                <tr style="opacity: .6;pointer-events: none">
                                    <td>@item.QuestionNumber</td>
                                    <td colspan="4" style="padding: 10px 0">
                                        <input type="radio" @((item.KeyAnswer == "1") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                        <input type="radio" @((item.KeyAnswer == "2") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                        <input type="radio" @((item.KeyAnswer == "3") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                        <input type="radio" @((item.KeyAnswer == "4") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Count > 20)
                    {
                        <table class="table col-2 col-sm-1 mb-4 mb-sm-0" style="direction: ltr">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>1</th>
                                    <th>2</th>
                                    <th>3</th>
                                    <th>4</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Skip(20).Take(20))
                                {
                                    <tr style="opacity: .6;pointer-events: none">
                                        <td>@item.QuestionNumber</td>
                                        <td colspan="4" style="padding: 10px 0">
                                            <input type="radio" @((item.KeyAnswer == "1") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                            <input type="radio" @((item.KeyAnswer == "2") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                            <input type="radio" @((item.KeyAnswer == "3") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                            <input type="radio" @((item.KeyAnswer == "4") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    @if (Model.Count > 40)
                    {
                        <table class="table col-2 col-sm-1 mb-4 mb-sm-0" style="direction: ltr">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>1</th>
                                    <th>2</th>
                                    <th>3</th>
                                    <th>4</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Skip(40).Take(20))
