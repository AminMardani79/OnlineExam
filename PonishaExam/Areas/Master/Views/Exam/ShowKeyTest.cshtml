                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Skip(80).Take(20))
                                {
                                    <tr style="opacity: .6;pointer-events: none">
                                        <td>@item.QuestionNumber</td>
                                        <td colspan="4" style="padding: 10px 0">
                                            <input type="radio" @((item.KeyAnswer == "1") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                            <input type="radio" @((item.KeyAnswer == "2") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                            <input type="radio" @((item.KeyAnswer == "3") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                            <input type="radio" @((item.KeyAnswer == "4") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </section>
            </div>
        </div>
    </div>
</div>