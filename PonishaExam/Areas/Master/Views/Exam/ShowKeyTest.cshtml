                                            <input type="radio" @((item.KeyAnswer == "4") ? "checked" : "" ) name="question @item.QuestionNumber" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    @if (Model.Count > 80)
                    {
