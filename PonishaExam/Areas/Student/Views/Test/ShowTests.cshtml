@model Tuple<List<TestsViewModel>, int, int>
@{
    ViewData["Title"] = "آزمون ها";
}
<section class="p-5">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card mb-1">
            <div class="card py-3">
                <h5 class="px-3"> <i class="fa fa-search"></i> جستجو</h5>
                <hr />
                <form class="row px-3 justify-content-center" asp-area="Student" asp-controller="Test" asp-action="ShowTests" method="get">
                    <div class="row col-xl-3 mb-2 mb-xl-0">
                        <div class="col-md-12 mb-1">
                            <input name="search" class="form-control searchTitle" placeholder="عنوان آزمون">
                        </div>
                    </div>
                    <div class="col-xl-4 row mb-2 mb-xl-0">
                        <div class="col-md-7">
                            <input value="true" type="checkbox" name="IsFinished">
                            <label>فقط آزمون های فعال</label>
                        </div>
                        <div class="col-md-5 d-flex align-items-start">
                            <input type="submit" class="showBtn ml-1" value="اعمال فیلتر" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <h6 class="card-title col-md-2">لیست آزمون ها</h6>
                        <div class="col-md-10 row">
                            <div>در انتظار شروع آزمون<i class="fa fa-calendar-times-o text-info ml-3 mr-1" style="font-size: 20px"></i></div>
                            <div>آزمون در حال برگذاریست<i class="fa fa-hourglass-start text-primary ml-3 mr-1" style="font-size: 20px"></i></div>
                            <div>ثبت پاسخ<i class="fa fa-check text-success ml-3 mr-1" style="font-size: 20px"></i></div>
                            <div>بسته شده<i class="fa fa-close text-danger ml-2 mr-1" style="font-size: 20px"></i></div>
                        </div>
                    </div>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th class="text-center">
                                        عنوان آزمون
                                    </th>
                                    <th class="text-center">
                                        تعداد سوال
                                    </th>
                                    <th class="text-center">
                                        قیمت آزمون(تومان)
                                    </th>
                                    <th class="text-center">
                                        زمان آزمون
                                    </th>
                                    <th class="text-center">
                                        شروع آزمون
                                    </th>
                                    <th class="text-center">
                                        اتمام آزمون
                                    </th>
                                    <th class="text-center">
                                        تاریخ آزمون
                                    </th>
                                    <th class="text-center">
                                        عملیات
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Item1)
                                {
                                    <tr id="item_@item.TestId">
                                        <td class="text-center">
                                            @if (item.IsStartedExam == false && item.IsFinish == false)
                                            {
                                                <i class="fa fa-calendar-times-o text-info" style="font-size: 22px"></i>
                                            }
                                            else if (item.IsStartedExam && item.IsSubmitAnswer == false)
                                            {
                                                <i class="fa fa-hourglass-start text-primary" style="font-size: 22px"></i>
                                            }
                                            else if (item.IsStartedExam && item.IsSubmitAnswer == true)
                                            {
                                                <i class="fa fa-check text-success" style="font-size: 22px"></i>
                                            }
                                            else if (item.IsStartedExam == false && item.IsSubmitAnswer == true && item.IsFinish == true)
                                            {
                                                <i class="fa fa-check text-success" style="font-size: 22px"></i>
                                            }
                                            else if (item.IsStartedExam == false && item.IsSubmitAnswer == false && item.IsFinish == true)
                                            {
                                                <i class="fa fa-close text-danger" style="font-size: 22px"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @item.TestTitle
                                        </td>
                                        <td class="text-center">
                                            @item.QuestionCounts
                                        </td>
                                        <td class="text-center">
                                            @item.TestPrice
                                        </td>
                                        <td class="text-center">
                                            @item.TestDuration
                                        </td>
                                        <td class="text-center">
                                            @item.StartTime
                                        </td>
                                        <td class="text-center">
                                            @item.EndTime
                                        </td>
                                        <td class="text-center">
                                            @item.TestDayTime
                                        </td>
                                        <td class="text-center">
                                            <div class="dropdown mb-2">
                                                <button class="btn p-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal icon-lg text-muted pb-3px"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                                </button>
                                                <div class="dropdown-menu dropdown-menu-right ml-4" aria-labelledby="dropdownMenuButton">
                                                    @if (!item.IsBuyTest && !item.IsStartedExam && !item.IsFinish)
                                                    {
                                                        <a class="dropdown-item d-flex align-items-center" onclick="AddToBasket(@item.TestId)" style="cursor:pointer">
                                                            <svg xmlns="http://www.w3.org/2000/svg" style="width:17px;height:15px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-bag link-icon"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg>
                                                            <span>افزودن به سبد خرید</span>
                                                        </a>
                                                    }
                                                    else if (item.IsBuyTest && item.IsSubmitAnswer == false && item.IsFinish == false && item.IsStartedExam)
                                                    {
                                                        <a class="dropdown-item d-flex align-items-center" href="/StudentPanel/Test/EnterTest/@item.TestId/@ViewBag.LessonId"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-in ml-1"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path><polyline points="10 17 15 12 10 7"></polyline><line x1="15" y1="12" x2="3" y2="12"></line></svg><span class="">ورود به آزمون</span></a>
                                                    }
                                                    else if (item.IsBuyTest && item.IsSubmitAnswer == true || item.IsFinish == true)
                                                    {
                                                        <a class="dropdown-item d-flex align-items-center" href="/StudentPanel/Test/ShowAnswers/@item.TestId/@ViewBag.LessonId"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text ml-1"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg><span class="">پاسخ ها</span></a>
                                                    }
                                                    else if (!item.IsBuyTest && item.IsStartedExam && !item.IsFinish)
                                                    {
                                                        <a class="dropdown-item d-flex align-items-center" href="" style="pointer-events:none"><span class="">آزمون خریداری نشده</span></a>
                                                    }
                                                    else
                                                    {
                                                        <a class="dropdown-item d-flex align-items-center" href="" style="pointer-events:none"><span class="">آزمون بسته است</span></a>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (Model.Item2 > 1)
                        {
                            <div class="dataTables_paginate paging_simple_numbers py-3 d-flex justify-content-center" id="dataTableExample_paginate">
                                <ul class="pagination">
                                    <li class="paginate_button page-item previous @((Model.Item3 - 1 == 0) ? "disabled" : "")" id="dataTableExample_previous">
                                        <a href="/StudentPanel/Test/@ViewBag.LessonId?page=@(Model.Item3 - 1)&IsFinished=@ViewBag.IsFinished&Search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="0" tabindex="0" class="page-link">قبلی</a>
                                    </li>
                                    @for (int i = 1; i <= (Model.Item2); i++)
                                    {
                                        <li class="paginate_button page-item @(Model.Item3 == i ? "active" : "")">
                                            <a href="/StudentPanel/Test/@ViewBag.LessonId?page=@i&IsFinished=@ViewBag.IsFinished&Search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="1" tabindex="0" class="page-link">@i</a>
                                        </li>
                                    }
                                    <li class="paginate_button page-item @((Model.Item3 + 1 > Model.Item2) ? "disabled" : "")" id="dataTableExample_next">
                                        <a href="/StudentPanel/Test/@ViewBag.LessonId?page=@(Model.Item3 + 1)&IsFinished=@ViewBag.IsFinished&Search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="4" tabindex="0" class="page-link">بعدی</a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" value="@ViewBag.submitAnswerId" id="submitAnswer" />
    <input type="hidden" value="@ViewBag.TestClosed" id="TestClosed" />
</section>
@section Scripts{
    <script src="/js/alert.js" asp-append-version="true"></script>
    <script src="/js/Orders.js" asp-append-version="true"></script>
    <script src="~/Percian-Calender/src/kamadatepicker.min.js"></script>
    <script type="text/javascript" src="~/clock/dist/bootstrap-clockpicker.min.js"></script>
    <script type="text/javascript" src="/clock/assets/js/scripts.js"></script>
    
}
@section Css
{
    <link rel="stylesheet" href="~/Percian-Calender/style/kamadatepicker.min.css" />
    <link rel="stylesheet" type="text/css" href="~/clock/dist/bootstrap-clockpicker.min.css">
    <link rel="stylesheet" href="/clock/assets/css/styles.css" />
    <link rel="stylesheet" href="/css/AdminStyles.css" asp-append-version="true" />
}