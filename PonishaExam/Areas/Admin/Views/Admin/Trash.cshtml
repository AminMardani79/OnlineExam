@model Tuple<List<AdminViewModel>, int, int>
@{
    ViewData["Title"] = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4 pb-2">
                <a class="d-inline-block mt-3 text-black" href="/AdminPanel/AdminList">
                   مدیران
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body pt-0">
                <div class="row py-2 justify-content-between">
                    <h6 class="card-title style col-md-6 mb-1 mb-md-0">لیست حذفیات مدیران</h6>
                    <form class="col-md-4 position-relative" asp-controller="Admin" asp-action="Trash" method="get">
                        <input name="search" class="form-control w-100 mr-auto" placeholder="جستجو مدیر..." style="padding-left: 65px">
                        <button type="submit" class="btn btn-primary ml-2 position-absolute" style="left: 5px;
                                                                                                                              top: 0;
                                                                                                                              height: 100%;
                                                                                                                              border-radius: 2px;">
                            ثبت
                        </button>
                    </form>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>تصویر مدیر</th>
                            <th class="text-center">
                                نام مدیر
                            </th>
                            <th class="text-center">
                                پست الکترونیک
                            </th>
                            <th class="text-center">
                                کد ملی
                            </th>
                            <th class="text-center">
                                شماره تلفن
                            </th>
                                
                            <th class="text-center">
                                عملیات
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item1)
                            {
                                <tr id="item_@item.AdminId">
                                    <td class="text-center">
                                        <img src="/image/@item.AdminImage" style="width:60px;height:60px" class="img-thumbnail rounded-circle" />
                                    </td>
                                    <td class="text-center">
                                        @item.AdminName
                                    </td>
                                    <td class="text-center">
                                        @item.AdminEmail
                                    </td>
                                    <td class="text-center">
                                        @item.NationalCode
                                    </td>
                                    <td class="text-center">
                                        @item.PhoneNumber
                                    </td>
                                    <td class="text-center">
                                        <div class="dropdown mb-2">
                                            <button class="btn p-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal icon-lg text-muted pb-3px"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                                <button class="dropdown-item d-flex align-items-center" onclick="BackAdmin('@item.AdminId')"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 icon-sm ml-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg> <span class="">انصراف از حذف</span></button>
                                                <button onclick="DeleteAdmin('@item.AdminId')" class="dropdown-item d-flex align-items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash icon-sm ml-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg> <span class="">حذف نهایی</span></button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Item2 > 1)
                    {
                        <div class="dataTables_paginate paging_simple_numbers py-3 d-flex justify-content-center" id="dataTableExample_paginate">
                            <ul class="pagination">
                                <li class="paginate_button page-item previous @((Model.Item3-1 == 0) ? "disabled" : "")" id="dataTableExample_previous">
                                    <a href="/AdminPanel/AdminTrashList?page=@(Model.Item3-1)&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="0" tabindex="0" class="page-link">قبلی</a>
                                </li>
                                @for (int i = 1; i <= (Model.Item2); i++)
                                {
                                    <li class="paginate_button page-item @(Model.Item3==i?"active":"")">
                                        <a href="/AdminPanel/AdminTrashList?page=@i&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="1" tabindex="0" class="page-link">@i</a>
                                    </li>
                                }
                                <li class="paginate_button page-item @((Model.Item3+1 > Model.Item2) ? "disabled" : "")" id="dataTableExample_next">
                                    <a href="/AdminPanel/AdminTrashList?page=@(Model.Item3+1)&search=@ViewBag.Search" aria-controls="dataTableExample" data-dt-idx="4" tabindex="0" class="page-link">بعدی</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>