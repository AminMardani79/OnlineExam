@model AddAdminViewModel
@{
    ViewData["Title"] = "افزودن مدیر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">
                <a class="d-inline-block mt-3 text-black" href="/AdminPanel/Adminlist">
                   مدیران
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body pt-0">
                <h6 class="card-title">افزودن مدیر جدید</h6>
                <form asp-controller="Admin" asp-action="Create" method="post" enctype="multipart/form-data">
                   @if (ViewBag.Error!=null)
                   {
                       <div class="alert alert-danger">
                           @ViewBag.Error
                       </div>
                   }
                    <div class="col-sm-12">
                        <div class="form-group">
                            <img id="NewImg" src="~/image/masterAvatar.png" class="img-thumbnail mr-1 mb-2 showNewImage rounded-circle" />
                            <br />
                            <label for="imgUp" class="control-label ml-2 chooseImage">
                                انتخاب تصویر<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-download-cloud"><polyline points="8 17 12 21 16 17"></polyline><line x1="12" y1="12" x2="12" y2="21"></line><path d="M20.88 18.09A5 5 0 0 0 18 9h-1.26A8 8 0 1 0 3 16.29"></path></svg>
                            </label>
                            <input type="file" asp-for="Avatar" class="d-none" id="imgUp" onchange="ChangeImage(this);" />
                            <span asp-validation-for="Avatar" class="text-danger"></span><br />
                        </div>
                        <div class="form-group">
                            <label class="control-label"> نام مدیر</label>
                            <input type="text" asp-for="AdminName" class="form-control" placeholder="نام را وارد کنید">
                            <span class="text-danger" asp-validation-for="AdminName"></span>
                        </div>
                       
                        <div class="form-group">
                            <label class="control-label">ایمیل</label>
                            <input type="email" asp-for="AdminEmail" class="form-control" placeholder="ایمیل را وارد کنید">
                            <span class="text-danger" asp-validation-for="AdminEmail"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">شماره تماس</label>
                            <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="شماره تماس را وارد کنید">
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">رمز عبور</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="گذر واژه را وارد کنید">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">کد ملی</label>
                            <input type="text" asp-for="NationalCode" class="form-control" placeholder="کد ملی را وارد کنید">
                            <span class="text-danger" asp-validation-for="NationalCode"></span>
                        </div>
                        <div class="form-group mb-0 row">
                            
                                <label class="col-form-label">درباره مدیر</label>
                           
                                <textarea id="maxlength-textarea" asp-for="About" class="form-control" maxlength="100" rows="8" placeholder="حداکثر 100 کاراکتر مجاز است"></textarea>
                          
                          
                            <span class="text-danger" asp-validation-for="About"></span>
                        </div>
                        <div class="form-check form-check-flat form-check-primary">
                            <label class="form-check-label">
                                <input type="checkbox" asp-for="ActiveAccount" class="form-check-input">
                                حساب مدیر فعال شود
                                <i class="input-frame"></i>
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit">ثبت</button>
                </form>
            </div>
        </div>
    </div>
</div>