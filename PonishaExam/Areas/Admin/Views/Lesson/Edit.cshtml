@using Application.ViewModels.LessonViewModel
@model EditLessonViewModel
@{
    ViewData["Title"] = "ویرایش درس";
}
<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">
                <a class="d-inline-block mt-3 text-black" href="/AdminPanel/Lesson">
                    دروس
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body pt-0">
                <h6 class="card-title">ویرایش درس</h6>
                <form asp-controller="Lesson" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="LessonId" />
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">نام درس </label>
                            <input type="text" asp-for="LessonName" class="form-control" placeholder="نام را وارد کنید">
                        </div>
                        <span class="text-danger" asp-validation-for="LessonName"></span>

                        <div class="form-group">
                            <label class="control-label"></label>
                            <select asp-for="GradeId" class="form-control" asp-items="ViewBag.GradeId"></select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit">ثبت</button>
                </form>
            </div>
        </div>
    </div>
</div>