@model EditGradeViewModel
@{
    ViewData["Title"] = "ویرایش پایه تحصیلی";
}


<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">
                <a class="d-inline-block mt-3 text-black" href="/AdminPanel/Grade">
                    پایه ها
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body pt-0">
                <h6 class="card-title">ویرایش پایه تحصیلی</h6>
                <form asp-controller="Grade" asp-action="Edit" method="post">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">عنوان پایه تحصیلی </label>
                            <input type="text" asp-for="GradeName" class="form-control" placeholder="عنوان را وارد کنید">
                        </div>
                        <span class="text-danger" asp-validation-for="GradeName"></span>
                    </div>
                    <button type="submit" class="btn btn-primary submit">ثبت</button>
                    <input type="hidden" asp-for="GradeId" />
                </form>
            </div>
        </div>
    </div>
</div>