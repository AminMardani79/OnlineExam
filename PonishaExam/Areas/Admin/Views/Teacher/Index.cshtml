@model IEnumerable<TeacherViewModel>
@{
    ViewData["Title"] = "لیست مدرسین";
    var prevPage = ViewBag.PageId - 1;
    var nextPage = ViewBag.PageId + 1;
    int pageCount = ViewBag.PageCount;
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">مدرسین</h6>
                <a asp-action="Create" asp-controller="Teacher" class="btn text-white btn-success">افزودن</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="d-none d-md-table-cell">
                                    مدرس
                                </th>
                                <th>
                                    نام مدرس
                                </th>
                                <th>
                                    شماره همراه
                                </th>
                                <th>
                                    ایمیل
                                </th>
                                <th>
                                    کد ملی
                                </th>
                                <th>
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="item_@item.TeacherId">
                                    <td class="text-center d-none d-md-table-cell">
                                        <img src="~/image/@item.TeacherImage" style="width:65px;height:65px" class="rounded-circle img-thumbnail" />
                                    </td>
                                    <td class="text-center">
                                        @item.TeacherName
                                    </td>
                                    <td class="text-center">
                                        @item.PhoneNumber
                                    </td>
                                    <td class="text-center">
                                        @item.TeacherEmail
                                    </td>
                                    <td class="text-center">
                                        @item.NationalCode
                                    </td>
                                    <td>
                                        <div class="dropdown mb-2">
                                            <button class="btn p-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal icon-lg text-muted pb-3px"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item d-flex align-items-center" asp-action="Edit" asp-controller="Teacher" asp-route-id="@item.TeacherId"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 icon-sm ml-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg> <span class="">ویرایش</span></a>
                                                <button onclick="TrashTeacher('@item.TeacherId')" class="dropdown-item d-flex align-items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash icon-sm ml-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg> <span class="">حذف</span></button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-sm-6 order-1 order-sm-0">
                        <a class="d-inline-block mt-4 text-black" href="/AdminPanel/Teacher/ShowDeleteList">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                <line x1="10" y1="11" x2="10" y2="17"></line>
                                <line x1="14" y1="11" x2="14" y2="17"></line>
                            </svg>
                            حذفیات
                        </a>
                    </div>
                    @if (pageCount > 1)
                    {
                        <div class="col-sm-6 mt-4 d-sm-flex justify-content-end">
                            <div class="dataTables_paginate paging_simple_numbers" id="dataTableExample_paginate">
                                <ul class="pagination pr-0">
                                    <li class="paginate_button page-item previous @((prevPage == 0) ? "disabled" : "")" id="dataTableExample_previous">
                                        <a href="/AdminPanel/Teachers/@prevPage" aria-controls="dataTableExample" data-dt-idx="0" tabindex="0" class="page-link">قبلی</a>
                                    </li>
                                    @for (var i = 1; i <= pageCount; i++)
                                    {
                                        <li class="paginate_button page-item @((i == ViewBag.PageId) ? "active" : "")"><a href="/AdminPanel/Teachers/@i" aria-controls="dataTableExample" data-dt-idx="1" tabindex="0" class="page-link">@i</a></li>
                                    }
                                    <li class="paginate_button page-item next @((nextPage > pageCount) ? "disabled" : "")" id="dataTableExample_next">
                                        <a href="/AdminPanel/Teachers/@nextPage" aria-controls="dataTableExample" data-dt-idx="4" tabindex="0" class="page-link">بعدی</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
}