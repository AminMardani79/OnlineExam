@model AddTeacherViewModel
@{
    ViewData["Title"] = "افزودن مدرس";
    List<ItemLessonViewModel> models = ViewBag.list as List<ItemLessonViewModel>;
}

<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="d-flex justify-content-end px-4">
                <a class="d-inline-block mt-3 text-black" href="/AdminPanel/Teachers">
                    مدرسین
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </a>
            </div>
            <div class="card-body pt-0">
                <h6 class="card-title">افزودن مدرس</h6>
                <form asp-controller="Teacher" asp-action="Create" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="RoleId" value="2" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <img id="NewImg" src="~/image/masterAvatar.png" class="img-thumbnail mr-1 mb-2  rounded-circle showNewImage" />
                        <br />
                        <label for="imgUp" class="control-label ml-2 chooseImage">
                            انتخاب عکس<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-download-cloud"><polyline points="8 17 12 21 16 17"></polyline><line x1="12" y1="12" x2="12" y2="21"></line><path d="M20.88 18.09A5 5 0 0 0 18 9h-1.26A8 8 0 1 0 3 16.29"></path></svg>
                        </label>
                        <input type="file" asp-for="Avatar" class="d-none" id="imgUp" onchange="ChangeImage(this);" />
                        <span asp-validation-for="Avatar" class="text-danger"></span><br />

                    </div>
                    <div class="form-group">
                        <label asp-for="TeacherName" class="control-label"></label>
                        <input asp-for="TeacherName" class="form-control" />
                        <span asp-validation-for="TeacherName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeacherEmail" class="control-label"></label>
                        <input asp-for="TeacherEmail" class="form-control" />
                        <span asp-validation-for="TeacherEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">گذر واژه</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NationalCode" class="control-label"></label>
                        <input asp-for="NationalCode" class="form-control" />
                        <span asp-validation-for="NationalCode" class="text-danger"></span>
                    </div> <div class="form-check form-check-flat form-check-primary">
                        <label class="form-check-label">
                            <input type="checkbox" asp-for="ActiveAccount" class="form-check-input">
                            حساب مدرس فعال شود
                            <i class="input-frame"></i>
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect2">انتخاب دروس</label>
                        <select multiple="" asp-for="Items" name="Items" class="form-control" id="exampleFormControlSelect2">
                            @foreach (var item in models)
                            {
                                <option value="@item.LessonId">@item.LessonName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">درباره مدرس</label>
                        <textarea class="form-control" asp-for="About" id="exampleFormControlTextarea1" rows="5"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary submit">ثبت</button>
                </form>
            </div>
        </div>
    </div>
</div>