@model Tuple<List<TestsViewModel>, int, int>
@{
    ViewData["Title"] = "آزمون ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card mb-1">
        <div class="card py-3">
            <h5 class="px-3"> <i class="fa fa-search"></i> جستجو</h5>
            <hr />
            <form class="row px-3" asp-controller="Test" asp-action="SearchTest" method="get">
                <div class="row col-xl-3 mb-2 mb-xl-0">
                    <div class="col-md-12 mb-1">
                        <input name="testTitle" id="testTitle" class="form-control searchTitle" placeholder="عنوان آزمون">
                    </div>
                    <div class="col-md-12">
                        <input name="testCode" id="testCode" class="form-control searchTitle" placeholder="کد آزمون (اختیاری)">
                    </div>
                </div>
                <div class="row col-xl-5  mb-2 mb-xl-0">
                    <div class="col-md-12 mb-1 d-flex">
                        <label class="align-self-center">از تاریخ :</label>
                        <div style="position: relative; margin-right: 10px;width: 73%">
                            <div class="input-group-prepend" style="position: absolute; top: 0; right: 1px; height: 91%; z-index: 10">
                                <span class="input-group-text">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                            <div class="flex-grow-1">
                                <input type="text" name="fromDate" id="fromDate" class="form-control w-100" DatePicker="1" style="padding-right: 50px">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 mb-1 d-flex">
                        <label class="align-self-center">تا تاریخ :</label>
                        <div style="position: relative;margin-right: 8px;width: 73%">
                            <div class="input-group-prepend" style="position: absolute; top: 0; right: 2px; height: 91%; z-index: 10">
                                <span class="input-group-text">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                            <div class="flex-grow-1">
                                <input type="text" class="form-control w-100" name="toDate" id="toDate" DatePicker="1" style="padding-right: 50px">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 row  mb-2 mb-xl-0">
                    <div class="col-md-7">
                        <label for="male">آزمون های فعال</label>
                        <input type="radio" id="active" name="IsFinish" value="true"> <br />
                        <label for="female">آزمون های غیر فعال</label>
                        <input type="radio" id="off" name="IsFinish" value="false"> <br />
                        <label for="other">همه</label>
                        <input type="radio" id="all" name="IsFinish" checked value="All">
                    </div>
                    <div class="col-md-5 d-flex align-items-start">
                        <input type="submit" class="showBtn ml-1" value="اعمال فیلتر" />
                        <input type="button" class="removeFilter-btn" onclick="RemoveFilters()" value="حذف فیلتر ها" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">لیست آزمون ها</h6>
                <div class="row justify-content-between">
                    <div class="col-md-6 mb-1 mb-md-0">
                        <a asp-controller="Test" asp-action="Create" class="btn text-white btn-success">افزودن</a>
                    </div>
                </div>
                <div class="table-responsive pt-3" style="min-height:300px">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    عنوان آزمون
                                </th>
                                <th class="text-center">
                                    کد آزمون
                                </th>
                                <th class="text-center">
                                    تعداد سوال
                                </th>
                                <th class="text-center">
                                    قیمت آزمون(تومان)
                                </th>
                                <th class="text-center">
                                    مدت زمان
                                </th>
                                <th class="text-center">
                                    شروع آزمون
                                </th>
                                <th class="text-center">
                                    اتمام آزمون
                                </th>
                                <th class="text-center">
                                    تاریخ آزمون
                                </th>
                                <th class="text-center">
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item1)
                            {
                                <tr id="item_@item.TestId">
                                    <td class="text-center">
                                        @item.TestTitle
                                    </td>
                                    <td class="text-center">
                                        @item.TestCode
                                    </td>
                                    <td class="text-center">
                                        @item.QuestionCounts
                                    </td>
                                    <td class="text-center">
                                        @item.TestPrice
                                    </td>
                                    <td class="text-center">
                                        @item.TestDuration
                                    </td>
                                    <td class="text-center">
                                        @item.StartTime
                                    </td>
                                    <td class="text-center">
                                        @item.EndTime
                                    </td>
                                    <td class="text-center">
                                        @item.TestDayTime
                                    </td>
                                    <td class="text-center">
                                        <div class="dropdown mb-2">
                                            <button class="btn p-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal icon-lg text-muted pb-3px"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item d-flex align-items-center" href="/AdminPanel/Test/AddTestStudents/@item.TestId/@item.GradeId"><i class="mdi mdi-account-multiple ml-1"></i><span class="">انتخاب دانش آموز</span></a>
                                                <a class="dropdown-item d-flex align-items-center" href="/AdminPanel/Question/@item.TestId/@item.GradeId/@item.LessonId"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" class="feather feather-download icon-sm ml-2" stroke-linejoin="round" class="feather feather-folder-plus"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path><line x1="12" y1="11" x2="12" y2="17"></line><line x1="9" y1="14" x2="15" y2="14"></line></svg><span class="">افزودن سوال</span></a>
                                                <a class="dropdown-item d-flex align-items-center" href="/AdminPanel/Test/Edit/@item.TestId"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 icon-sm ml-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg> <span class="">ویرایش</span></a>
                                                @if (item.TestFile != null)
                                                {
                                                    <a class="dropdown-item d-flex align-items-center" href="/AdminPanel/DownloadFile/@item.TestFile"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-download icon-sm ml-2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg><span class="">دانلود فایل</span></a>
                                                }
                                                <a class="dropdown-item d-flex align-items-center" href="/AdminPanel/Test/KeyTest/@item.TestId"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-key ml-1"><path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4"></path></svg><span class="">کلید تستی آزمون</span></a>
                                                <a class="dropdown-item d-flex align-items-center" href="/AdminPanel/Test/participants/@item.TestId/@item.TestTitle/@item.TestFile"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text ml-2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg><span class="">پاسخ های ارسالی</span></a>
                                                <a class="dropdown-item d-flex align-items-center" href="/AdminPanel/Test/ReportParticipate/@item.TestId"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trending-up ml-2"><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline><polyline points="17 6 23 6 23 12"></polyline></svg><span class="">گزارش</span></a>
                                                <button onclick="AddToTestDelete('@item.TestId')" class="dropdown-item d-flex align-items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash icon-sm ml-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg> <span class="">حذف</span></button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Item2 > 1)
                    {
                        <div class="dataTables_paginate paging_simple_numbers py-3 d-flex justify-content-center" id="dataTableExample_paginate">
                            <ul class="pagination">
                                <li class="paginate_button page-item previous @((Model.Item3 - 1 == 0) ? "disabled" : "")" id="dataTableExample_previous">
                                    <a href="/AdminPanel/Test?pageNumber=@(Model.Item3 - 1)" aria-controls="dataTableExample" data-dt-idx="0" tabindex="0" class="page-link">قبلی</a>
                                </li>
                                @for (int i = 1; i <= (Model.Item2); i++)
                                {
                                    <li class="paginate_button page-item @(Model.Item3 == i ? "active" : "")">
                                        <a href="/AdminPanel/Test?pageNumber=@i" aria-controls="dataTableExample" data-dt-idx="1" tabindex="0" class="page-link">@i</a>
                                    </li>
                                }
                                <li class="paginate_button page-item @((Model.Item3 + 1 > Model.Item2) ? "disabled" : "")" id="dataTableExample_next">
                                    <a href="/AdminPanel/Test?pageNumber=@(Model.Item3 + 1)" aria-controls="dataTableExample" data-dt-idx="4" tabindex="0" class="page-link">بعدی</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
                <a class="d-inline-block mt-4 text-black" href="/AdminPanel/Test/DeletedTestList/">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        <line x1="10" y1="11" x2="10" y2="17"></line>
                        <line x1="14" y1="11" x2="14" y2="17"></line>
                    </svg>
                    حذفیات
                </a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/js/Alert.js" asp-append-version="true"></script>
    <script src="~/Percian-Calender/src/kamadatepicker.min.js"></script>
    <script type="text/javascript" src="~/clock/dist/bootstrap-clockpicker.min.js"></script>
    <script type="text/javascript" src="/clock/assets/js/scripts.js"></script>
}
@section Css
{
    <link rel="stylesheet" href="~/Percian-Calender/style/kamadatepicker.min.css" />
    <link rel="stylesheet" type="text/css" href="~/clock/dist/bootstrap-clockpicker.min.css">
    <link rel="stylesheet" href="/clock/assets/css/styles.css" />
    <link rel="stylesheet" href="/css/AdminStyles.css" asp-append-version="true" />
}