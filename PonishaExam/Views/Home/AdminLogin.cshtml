{
    <script src="/LoginMaster/js/jquery-3.3.1.min.js"></script>
    <script src="/LoginMaster/js/popper.min.js"></script>
    <script src="/LoginMaster/js/bootstrap.min.js"></script>
    <script src="/LoginMaster/js/main.js"></script>
